{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "build",
                        "type": "shell",
                        "command": "rm -rf build/* && cd build && cmake .. && make",
                        "problemMatcher": "$gcc"
                },
                {
                        "label": "debug",
                        "type": "shell",
                        "command":"rm -rf build/* && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
                        "problemMatcher": "$gcc"
                }
        ]
}